<div class="container">
  <div class='card'>
     <h5 class="card-header">
     Apply an Instrument to <%= @evaluatee.name %>
    </h5>
    <div class="card-body">
    <%= simple_form_for [@evaluatee, @assessment] do |f| %>
      <div class="field">
        <%= f.association :instrument, collection: Instrument.all, label_method: :name, value_method: :id, prompt: 'Select an Instrument' %>
      </div>

      <div class="actions">
        <%= f.button :submit %>
      </div>
    <% end %>
    </div>
  </div>
</div>