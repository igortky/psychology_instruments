<div class="container">
  <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
    Instrument Information
  </h1>
  <div class='card'>
    <div class="my-3 p-3">
      <dl class="row">
      <div class="col-md-4">
          <dt>Name</dt>
          <dd><%= @assessment.name %></dd>
          <% if @assessment.status == 'finalized' %>
            <dt>Result</dt>
            <dd><%= @assessment.total_score %> </dd>
          <% end %>
        </div>
      </dl>
    </div>
  </div>
  <div class='card'>
    <div class="my-3 p-3">
      <dl class="row">
      <div class="col-md-4">
        <dt>Instruments Questions</dt>
        <dd>
        <table class="table">
        <thead>
          <tr>
            <th scope="col">Question</th>
            <th scope="col">Option</th>
          </tr>
        </thead>
        <tbody>
          <% @assessment.questions.each do |question| %>
              <tr>
                <td><%= question['title'] %></td>
                <% question['options'].each do |option| %>
                <td><%= option['name'] %></td>
                <% end %>
              </tr>

          <% end %>
        </tbody>
      </table>
        </dd>
      </div>
      </dl>
    </div>
  </div>
</div>