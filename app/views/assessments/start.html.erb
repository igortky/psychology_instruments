<!-- app/views/assessments/start.html.erb -->
<%= simple_form_for @evaluatee, url: submit_evaluatee_assessment_path(@evaluatee, @assessment), method: :post do |f| %>
  <%= f.input :name, input_html: { value: @evaluatee.name } %>
  <%= f.input :cpf, input_html: { value: @evaluatee.cpf } %>
  <%= f.input :email, input_html: { value: @evaluatee.email } %>
  <%= f.input :birthdate, as: :date, start_year: Time.now.year - 100, end_year: Time.now.year - 18, discard_day: true, selected: @evaluatee.birthdate %>

  <%= f.button :submit, 'Next',  class: 'btn btn-primary' %>
<% end %>